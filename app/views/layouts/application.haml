%head
  %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
  = stylesheet_link_tag :application, :comments, :navbar
  = javascript_include_tag :application
  = csrf_meta_tag

  #wrap
    #navbar.nav.navbar.navbar-fixed-top
      %ul
        %li=link_to 'Blog', posts_path
        - if current_user && current_user.admin?
          %li= link_to 'Manage Posts', admin_index_path
          %li= link_to 'Create Post', new_post_path
          %li= link_to 'Create Category', new_category_path
          

    .flash_area
      - if flash
        = flash[:notice]
        = flash[:error]

    #logo
      %h1.big-logo.centered B:L:O:G:G:I:N:G A:B:O:U:T K:I:D:S
    #container
      = yield

.footer.centered

  = fa_icon "copyright"
  = 'Christian Adamini 2017'
  %br
    - unless current_user
      = link_to 'Login', new_user_session_path

    - if current_user
      = 'Logged in as:'
      = current_user.email
      = link_to 'Logout', destroy_user_session_path, method: :delete

