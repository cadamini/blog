%head
  %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
  %link{:href => "https://fonts.googleapis.com/css?family=Indie+Flower|Open+Sans:400,600i", :rel => "stylesheet"}/
  %link{:href => "https://fonts.googleapis.com/css?family=Indie+Flower|Open+Sans:400,600i", :rel => "stylesheet"}/

  = stylesheet_link_tag :application
  = javascript_include_tag :application
  = csrf_meta_tag

.logo
  = link_to posts_path do 
    .logo--main
      = "#ich#und#mein#blog"
    .logo--subline
      %small="Entwickeln, Bloggen, Lernen"

.flash_area
  - if flash
    = flash[:notice]
    = flash[:error]

.main-content
  = yield
  = yield(:sidebar)

.footer
  = render partial: 'layouts/footer'
