- if current_user  && current_user.admin?

  %h2 Posts

  %table.table.table-striped.sortable{:cellspacing => "0", :width => "100%"}
    %thead
      %tr
        %th Id
        %th Title
        %th Category

    %tbody
      - @posts.each do |post|
        %tr
          %td= post.id
          %td= link_to post.title, post_path(post)
          %td= Category.find(post.category_id).name unless post.category_id.nil?
          %td
            = link_to "edit", edit_post_path(post)
            = link_to 'delete', post, :method => :delete, data: { confirm: "Are you sure?" }
            - if post.published
              = link_to 'Unpublish', unpublish_post_url(post), method: :put
            - else
              = link_to 'Publish', publish_post_url(post), method: :put
