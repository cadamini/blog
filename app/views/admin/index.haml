- if current_user  && current_user.admin?

  %h2 Articles

  %table
    %tbody
      %tr
        %td PostId
        %td Title
        %td Published
        %td Actions
        %td Visibility

    - @posts.each do |post|
      %tr
        %td= post.id
        %td= post.title
        %td= post.published
        %td
          = link_to "show", post_path(post)
          = link_to "edit", edit_post_path(post)
          = link_to 'delete', post, :method => :delete, data: { confirm: "Are you sure?" }
        %td
          - if post.published
            = link_to 'Unpublish', unpublish_post_url(post), method: :put
          - else
            = link_to 'Publish', publish_post_url(post), method: :put
