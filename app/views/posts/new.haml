%h1="New Post"
= form_for @post do |f|
  %br
  = f.text_field :title, size: '40'
  %br
  %br
  = f.text_area :description, size: "80x20"
  %br
  = f.label :category
  %br
  = f.select :category_id, Category.all.map{ |category| [category.name, category.id] }
  %br
  = f.submit 
  %small=link_to 'back', posts_path